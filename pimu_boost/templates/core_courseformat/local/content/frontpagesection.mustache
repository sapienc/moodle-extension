{{!
    @template core_courseformat/local/course_format/frontpagesection

    Displays the frontpage section 1 (site home).

    Example context (json):
    {
        "sections": [
            "<li>This is the section content</li>"
        ],
        "showsettings": true,
        "settingsurl": "#"
    }
}}
<div class="pimu-frontpage-layout course-content">
    {{#showsettings}}
    <div class="pimu-frontpage-edit-button mb-3 mt-3">
        <a href="{{{settingsurl}}}" title="{{#str}} editsummary {{/str}}" aria-label="{{#str}} editsummary {{/str}}">
            <span>{{#pix}} t/edit, moodle {{/pix}}</span><span>{{# str }}pimu_text_edit_frontpage_settings, theme_pimu_boost{{/ str }}</span>
        </a>
    </div>
    {{/showsettings}}
    <div class="pimu-welcome-section sitetopic">
        <ul class="pimu-welcome-sections topics frontpage">
            {{#sections}}
                {{> core_courseformat/local/content/section }}
            {{/sections}}
        </ul>
    </div>
</div>
